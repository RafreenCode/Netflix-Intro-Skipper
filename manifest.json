{
  "manifest_version": 3,
  "name": "Netflix Intro Skipper",
  "version": "1.0.0",
  "description": "Automatically skips Netflix show intros for a seamless binge-watching experience. Works with all Netflix shows that have a skip intro button.",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.netflix.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_title": "Netflix Intro Skipper",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png"
  }
}